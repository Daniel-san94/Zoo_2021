@using Microsoft.AspNetCore.Identity
@namespace Zoo.Areas.Identity.Data

@inject SignInManager<ZooUser> SignInManager
@inject UserManager<ZooUser> UserManager

<!DOCTYPE html>

<html>
<head>

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/css/ekko-lightbox.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300&display=swap" rel="stylesheet">
    <title>@ViewData["Title"]</title>

</head>

<body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-gray-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Intro">
                    <img src="~/Images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light"></span>
                </a>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="zoo1">Budapest Zoo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="zoo2">Szeged Zoo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="zoo3">Veszprém Zoo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="zoo4">Sóstó Zoo</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Shop</a>
                            <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                <li><a class="dropdown-item noDecorationBlack" asp-area="" asp-controller="Shop" asp-action="ecommerce">e-commerce </a></li>
                                <li><a class="dropdown-item noDecorationBlack" asp-area="" asp-controller="Shop" asp-action="Invoice">Invoice</a></li>

                                <li class="dropdown-divider"></li>
                            </ul>
                        </li>


                        @if (SignInManager.IsSignedIn(User))
                        {
                            @* if (User.IsInRole("Administrator"))
            { *@


                            @await Component.InvokeAsync("Category")


                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                            </li>
                            @*}*@
                        }

                        </ul>

</div>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial.cshtml" />
            </div>
        </nav>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0"> @ViewData["Title"] </h1>
                        </div>

                    </div>
                </div>
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
                <!-- /.content -->
            </div>
        </div>
            <!-- /.content-wrapper -->

            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
                <div class="p-3">
                    <h5>Title</h5>
                    <p>Sidebar content</p>
                </div>
            </aside>

            <footer class="main-footer">
                <!-- To the right -->
                <div class="float-right d-none d-sm-inline">
                    Anything you want
                </div>
                <!-- Default to the left -->
                <strong>Copyright &copy; 2021 - Zoo - IT Projekt GAMF.</strong> All rights reserved.
            </footer>


            <script src="~/js/jquery.min.js"></script>
            <script src="~/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/ekko-lightbox.min.js"></script>
            <script src="~/js/adminlte.min.js"></script>
            <script src="~/js/jquery.filterizr.min.js"></script>

            <script src="~/js/demo.js"></script>

            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)

    </div>
</body>
</html>




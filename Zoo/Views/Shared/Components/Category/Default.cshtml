@model IEnumerable<Zoo.Models.Category>

<li class="nav-item dropdown">
    <a asp-controller="Categories"
       asp-action="Index"
       class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Shop</a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var item in Model)
        {
            <li>
                <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="GetCategoryDetails" asp-route-id="@item.Id">@item.Name</a>
            </li>
        }

        <div class="dropdown-divider"></div>

        <li>
            <a class="dropdown-item" asp-controller="Items" asp-action="Shop" asp-route-category="">View all items</a>
        </li>
    </ul>
</li>
